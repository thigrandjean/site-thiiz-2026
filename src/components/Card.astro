---
import type { ImageMetadata } from "astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import { Box, CircleChevronRight } from "@lucide/astro";

interface Props {
  title: string;
  href: string;
  category: "dreams" | "work" | string;
  image: ImageMetadata;
}

const { title, href, category, image } = Astro.props;
---

<a
  href={`/posts/${href}/`}
  class="flex flex-col p-2 w-full gap-2 border-gray-200 border rounded-md group hover:border-yellow active:border-red transition"
>
  {
    image && (
      <div class="flex aspect-video overflow-hidden items-center justify-center rounded-sm">
        <Image
          class="object-cover w-full h-full group-hover:scale-105 transition"
          src={image}
          alt={`Featured image: ${title}`}
        />
      </div>
    )
  }
  <div class="px-4 flex justify-between items-center">
    <div>
      <h2
        class="text-gray-200 group-hover:text-yellow group-active:text-red font-extrabold text-xl uppercase transition"
      >
        {title}
      </h2>
      <h3 class="flex gap-2 items-center text-white text-lg uppercase">
        <Box size={20} />
        {category}
      </h3>
    </div>
    <CircleChevronRight
      size={30}
      class="text-gray-200 group-hover:text-yellow group-active:text-red group-hover:scale-115 transition"
    />
  </div>
</a>
