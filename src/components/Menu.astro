---
import SocialLinks from "./SocialLinks.astro";

const menu = [
  { label: "Dreams", href: "/dreams" },
  { label: "Work", href: "/work" }
];
---

<nav class="flex items-center gap-4">
  <ul class="flex gap-4 text-white text-xl uppercase">
    {
      menu.map((item) => (
        <li>
          <a
            class="text-foreground hover:text-primary active:text-accent transition-colors"
            href={item.href}
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
  <SocialLinks />
</nav>
