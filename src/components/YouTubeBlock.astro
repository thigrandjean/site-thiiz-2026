---
import { YouTube } from "@astro-community/astro-embed-youtube";
interface Props {
  videoId: string;
}
const { videoId } = Astro.props;
---

<div
  class="relative rounded-lg overflow-hidden w-full aspect-video flex flex-col items-center justify-center shadow-main"
>
  <YouTube
    id={videoId}
    class="absolute inset-0 w-full h-full"
    params="autoplay=1&mute=1&loop=1&controls=0&modestbranding=1"
  />
</div>

<style>
  :global(lite-youtube) {
    width: 100%;
    height: 100%;
    max-width: unset;
  }
</style>
