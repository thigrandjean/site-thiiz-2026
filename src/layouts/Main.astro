---
import "../styles/global.css"
import { getCollection } from 'astro:content';
import Header from "../components/Header.astro"
import Hero from "../components/Hero.astro"
import { ClientRouter } from "astro:transitions"

const posts = await getCollection('posts')

const { frontmatter } = Astro.props
const { title, heroImage, heroIntent} = frontmatter;

console.log(`FROM MAIN ASTRO: ${heroImage}`)
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Thiiz - 3D render & motion</title>
    <ClientRouter />
	</head>
	<body>
    <Header />
    <Hero title={title} heroImage={heroImage} intent={heroIntent} />
    <main class="p-4 w-full flex flex-col items-center gap-4">
      <section class="max-w-4xl text-white text-lg flex flex-col items-center gap-4 [&_strong]:text-primary">
	      <slot />
      </section>

      <section class="text-primary">
					{
						posts.map((post) => (
							<div>
								<a href={`/posts/${post.id}/`}>
									<!-- {post.data.heroImage && ( -->
									<!-- 	<Image width={720} height={360} src={post.data.heroImage} alt="" /> -->
									<!-- )} -->
									<h4 class="title">{post.data.title}</h4>
								</a>
							</div>
						))
					}
      </section>

    </main>
	</body>
</html>
