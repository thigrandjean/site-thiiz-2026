---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import type { CollectionEntry } from "astro:content";
import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"posts">["data"];

const { title, description, heroImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Thiiz - {title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body class="bg-background">
    <Header />
    {!!heroImage && <Hero image={heroImage} intent="page" />}
    <main class="p-4 w-full flex flex-col items-center gap-4">
      <h1
        class="max-w-4xl text-primary font-extrabold uppercase text-2xl md:text-3xl w-full relative z-10 [&_b]:text-accent"
      >
        {title}
      </h1>
      <section
        class="max-w-4xl text-foreground text-lg flex flex-col gap-4 [&_strong]:text-primary"
      >
        <slot />
      </section>
    </main>
    <Footer />
  </body>
</html>
